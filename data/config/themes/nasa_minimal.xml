<?xml version="1.0" encoding="UTF-8"?>
<theme name="nasa_minimal" version="1.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../schema/theme.xsd">

  <!-- Colors as RGB 0..255 -->
  <colors>
    <bg r="0" g="0" b="0"/>
    <fg r="230" g="230" b="230"/>
    <muted r="140" g="140" b="140"/>

    <ok r="80" g="220" b="160"/>
    <warn r="240" g="200" b="80"/>
    <err r="255" g="90" b="90"/>

    <statusBg r="20" g="20" b="20"/>
    <statusFg r="220" g="220" b="220"/>
  </colors>

  <terminal>
    <cursor>
      <style>block</style> <!-- block | underline | bar -->
      <blink>true</blink>
    </cursor>

    <selection>
      <invert>true</invert>
    </selection>
  </terminal>

  <statusBar>
    <heightPx>18</heightPx>
    <icons>true</icons>
    <showWifi>true</showWifi>
    <showWebSocket>true</showWebSocket>
    <showModifiers>true</showModifiers>
  </statusBar>

</theme>
