<?xml version="1.0" encoding="UTF-8"?>
<screen>
	<styles>
		<style name="screen_bg" bg_color="#bg_primary" />
	</styles>

	<view flex_flow="column" width="100%" height="100%">
		<style name="screen_bg" />

		<!-- Status Bar -->
		<row
			width="100%"
			height="#status_bar_height"
			style_flex_main_place="space-between"
			style_flex_cross_place="center"
			style_pad_hor="#unit_sm"
			style_bg_color="#bg_status"
		>
			<bind_state subject="status_bar_enabled" ref_value="false" flag="hidden" />

			<!-- Left: Connection indicators -->
			<row style_gap="#unit_sm">
				<wifi_indicator />
				<websocket_indicator />
			</row>

			<!-- Center: Host -->
			<label text="$gateway_host" style_text_font="terminal_mono_10" />

			<!-- Right: Modifier keys -->
			<row style_gap="#unit_xs">
				<modifier_indicator key="S" subject="mod_shift" />
				<modifier_indicator key="C" subject="mod_ctrl" />
				<modifier_indicator key="A" subject="mod_alt" />
				<modifier_indicator key="F" subject="mod_fn" />
				<modifier_indicator key="Y" subject="mod_sym" />
			</row>
		</row>

		<!-- Terminal Area -->
		<div
			id="terminal_area"
			flex_grow="1"
			width="100%"
			style_pad_all="#unit_xs"
			style_bg_opa="0"
		>
			<terminal_grid />
			<terminal_cursor />
		</div>
	</view>
</screen>
