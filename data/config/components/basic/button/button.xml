<?xml version="1.0" encoding="UTF-8"?>
<component>
	<api>
		<prop name="label" type="string" default="Button" />
	</api>

	<styles>
		<style name="base" radius="#unit_md" bg_color="#accent_primary" text_color="#bg_primary" pad_hor="#unit_lg" pad_ver="#unit_md" />
		<style name="pressed" bg_color="#color_ok" />
	</styles>

	<view extends="button">
		<style name="base" />
		<style name="pressed" selector="pressed" />
		<label text="$label" align="center" />
	</view>
</component>
