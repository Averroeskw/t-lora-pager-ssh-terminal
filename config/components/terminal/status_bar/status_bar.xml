<?xml version="1.0" encoding="UTF-8"?>
<component>
	<styles>
		<style name="bar" width="100%" height="#status_bar_height" bg_color="#bg_status" />
	</styles>

	<view flex_flow="row" style_flex_main_place="space-between" style_flex_cross_place="center">
		<style name="bar" />
		<row style_gap="#unit_sm">
			<wifi_indicator />
			<websocket_indicator />
		</row>
		<label text="$gateway_host" style_text_font="terminal_mono_10" />
		<row style_gap="#unit_xs">
			<modifier_indicator key="S" subject="mod_shift" />
			<modifier_indicator key="C" subject="mod_ctrl" />
			<modifier_indicator key="A" subject="mod_alt" />
		</row>
	</view>
</component>
