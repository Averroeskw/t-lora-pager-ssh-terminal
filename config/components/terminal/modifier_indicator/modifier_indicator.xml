<component>
	<api>
		<prop name="key" type="string" default="?" />
		<prop name="subject" type="string" default="mod_shift" />
	</api>

	<styles>
		<style name="base" width="14" height="14" radius="#unit_xs" text_font="terminal_mono_10" />
		<style name="active" bg_color="#accent_primary" bg_opa="#opa_subtle" text_color="#accent_primary" />
		<style name="inactive" bg_opa="0" text_color="#fg_muted" />
	</styles>

	<view>
		<style name="base" />
		<style name="inactive" />
		<bind_style name="active" subject="$subject" ref_value="true" />
		<label text="$key" align="center" />
	</view>
</component>
